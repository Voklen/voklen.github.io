---
import '../../styles/global.css'
import Navbar from '../../components/Navbar.astro'
import dialyDiaryIcon from '../../assets/images/daily-diary/icon.png'
import dailyDiaryShakespeare from "../../assets/images/daily-diary/phoneScreenshots/Shakespeare's diary.png"
import dailyDiarySettings from '../../assets/images/daily-diary/phoneScreenshots/Settings.png'
import mitrella from '../../assets/images/mitrella/mitrella.png'
import pythonQuine from '../../assets/images/python-quine/source.png'
import moleculeSimStart from '../../assets/images/covalent-molecule-simulation/sim-start.png'
import moleculeSimEnd from '../../assets/images/covalent-molecule-simulation/sim-end.png'
import bearings from '../../assets/images/bearings/source.png'
import haggisInterpreter from '../../assets/images/haggis-interpreter/haggis-example.png'
---

<style>
	#projects-grid {
		margin-right: 50px;
		margin-top: 12vh;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 8px;
	}

	.card {
		height: 350px;
		display: grid;
		grid-template-rows: 4fr 1fr 3fr;
		padding: 10px;
		border: solid 1px rgba(133, 159, 202, 0.2);
		border: solid 1px #334;
		border-radius: 10px;
	}

	.card > figure {
		min-width: 0;
		min-height: 0;
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 2px;
	}

	.card > figure img {
		max-height: 100%;

		min-width: 0;
		min-height: 0;
	}

	.card > a {
		font-size: 1.5rem;
		font-weight: 700;
		font-style: normal;
		white-space: normal;
	}

	.card > p {
		margin: auto;
	}
</style>

<html lang="en">
	<head>
		<title>Alex Gorichev</title>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	</head>

	<body>
		<main>
			<div id="projects-grid">
				<div class="card">
					<figure>
						<img src={dialyDiaryIcon.src} />
						<img src={dailyDiaryShakespeare.src} />
						<img src={dailyDiarySettings.src} />
					</figure>
					<a href="https://github.com/Voklen/Daily-Diary">Daily Diary</a>
					<p>
						A diary app for android that has one entry per day that is saved as
						a plaintext file
					</p>
				</div>
				<div class="card">
					<figure>
						<img src={mitrella.src} />
					</figure>
					<a href="https://github.com/Voklen/Mitrella">Mitrella</a>
					<p>
						A graphing calculator, inspired by desmos but using my own
						stack-based mathematical notation.
					</p>
				</div>
				<div class="card">
					<figure>
						<img src={pythonQuine.src} />
					</figure>
					<a href="https://github.com/Voklen/Output-Source">Python Quine</a>
					<p>A Python program that prints out it's own source code.</p>
				</div>
				<div class="card">
					<figure>
						<img src={moleculeSimStart.src} />
						<img src={moleculeSimEnd.src} />
					</figure>
					<a href="https://github.com/Voklen/Covalent-Molecule-Simulation"
						>Covalent Bond Simulation</a
					>
					<p>
						A visual simulation of PD-PD forces made with the
						<a href="https://godotengine.org/">Godot game engine</a>.
					</p>
				</div>
				<div class="card">
					<figure>
						<img src={bearings.src} />
					</figure>
					<a href="https://github.com/Voklen/Bearings">Bearings</a>
					<p>
						A small program to calculate bearings written in
						<a href="https://www.uiua.org/">Uiua</a>.
					</p>
				</div>
				<div class="card">
					<figure>
						<img src={haggisInterpreter.src} />
					</figure>
					<a href="https://github.com/Voklen/Haggis-Interpreter"
						>Haggis Interpreter</a
					>
					<p>
						A small interpreter for the SQA's (Scottish Qualifications
						Authority) programming language 'Haggis' writen in Rust.
					</p>
				</div>
			</div>
		</main>
		<Navbar />
	</body>
</html>
